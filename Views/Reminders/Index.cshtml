@model IEnumerable<RingoMediaReminder.Entities.Reminder>

@{
    ViewData["Title"] = "Reminders";
}

<h1>Reminders</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Reminder</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReminderDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReminderDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Emails)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
