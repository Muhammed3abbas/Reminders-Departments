@model Department

<h1>@Model.Name</h1>
<img src="@Model.Logo" alt="@Model.Name" />
<h2>Sub-Departments</h2>
<ul>
    @foreach (var subDepartment in Model.SubDepartments)
    {
        <li>@subDepartment.Name</li>
    }
</ul>

<h2>Parent Departments</h2>
<ul>
    @{
        var current = Model;
        while (current.ParentDepartment != null)
        {
            <li>@current.ParentDepartment.Name</li>
            current = current.ParentDepartment;
        }
    }
</ul>
